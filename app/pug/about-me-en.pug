html
	head
		title Gorazd Ratulovsky – digital designer & front-end developer
		link(rel="stylesheet" href="https://webfonts.fontstand.com/WF-003967-50d7ef660a15a6a02aad988ada1b94b9.css" type="text/css")
		link(rel="stylesheet" type="text/css" href="http://gorazd.sk/styles/bundle.css")
		meta(charset="UTF-8")
		meta(name="description" content="Digitálny designer a kóder, s vášňou pre čistý a funkčný design.")
		meta(name="keywords" content="digital design, ui, ux, ui designer, front-end developer, digital designer, webdesign, webdizajn")
		meta(name="robots" content="all")
		meta(name="author" content="Gorazd Ratulovsky")
		meta(name="viewport" content="width=device-width, initial-scale=1")
	body.is-subpage
		header.l-header
			div.l-header__logo.js-logotyper-parent
				span.js-logotyper-changelogo(style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; ")
				h1.l-header__logo-text.js-logotyper(data-first-logo="gorazd—ratulovsky")
				span.l-header__logo-symbol
					include assets/logo-01.svg
			ul.l-header__lang
				li 
					a(href="http://gorazd.design/o-mne").l-header__lang-item sk
				li 
					a(href="http://gorazd.design/en/about-me").l-header__lang-item.is-active en

		nav.c-vertical-nav
			ul 
				li 
					a(href="#" data-slide-id="1" data-change-logo="about—gorazd" data-content="about-me").js-slider-navItem.js-change-logo.c-vertical-nav__link about-me
						include assets/morp-01.svg
						span
				li 
					a(href="#" data-slide-id="2" data-change-logo="gorazd—projects" data-content="projects").js-slider-navItem.js-change-logo.c-vertical-nav__link projects
						include assets/morp-02.svg
						span
				li 
					a(href="#" data-slide-id="9" data-change-logo="say—hello—gorazd" data-content="contact-me").js-slider-navItem.js-change-logo.c-vertical-nav__link contact me
						include assets/morp-03.svg
						span
		div#barba-wrapper
			div.barba-container(data-namespace="sub-page")
				a(href="http://gorazd.design/en#about-me" title="Back to homepage").e-back-link
					include assets/arrow-back-02.svg
				include sections/sub-about-me-en.pug
				
		script(src="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.6.0/min/tiny-slider.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/snap.svg/0.5.1/snap.svg-min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/barba.js/1.0.0/barba.min.js")
		script(src="http://gorazd.sk/scripts/app.js")

